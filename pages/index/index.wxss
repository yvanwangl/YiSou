.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0;
  background: #DEDEDE;
  height: auto;
}
.itemWrap {
  width: 100%;
  background: #fff;
  margin: 0 0 16rpx 0;
}
.itemWrap.last {
  margin: 0;
  border-bottom: 1rpx solid #eee;
}
.itemTitle {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-bottom: 1rpx solid #E0E0E0;
}
.programItem {
  display:inline-block;
  box-sizing: border-box;
  width:25%;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  font-size: 28rpx;
}
.section {
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  background: #eee;
  text-align: center
}
form {
  width: 100%;
}
.section_gap {
  height: 240rpx;
}
.blogItem {
  /*height: 400rpx;*/
  overflow: hidden;
  background: #fff;
  margin:20rpx;
  padding:0 30rpx 30rpx 30rpx;
  text-align: center;
  border-radius: 20rpx;
}
.blogTitle {
  line-height: 1.6;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-bottom: 1px dashed #E0E0E0;
  margin-bottom: 30rpx;
}
.planit {
  font-size: 28rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  line-height: 2;
}
.authorInfo {
  height: 88rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
  border-top: 1rpx dashed #E0E0E0;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.authorInfo view {
  display: inline-block;
  width: 50%;
  box-sizing: border-box;
  border-right: 1rpx solid #E0E0E0;
}
.authorInfo .count {
  border-right: none;
}